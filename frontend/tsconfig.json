{
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",

    "strict": true,
    "paths": {
      "react": ["./node_modules/preact/compat/"],
      "react-dom": ["./node_modules/preact/compat/"]
    },
    "types": ["vite/client", "vite-plugin-pwa/client"]
  },
  "include": ["src"]
}
