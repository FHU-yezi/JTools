{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "linter": {
    "ignore": ["index.css"],
    "rules": {
      "style": {
        "noNonNullAssertion": "off"
      },
      "complexity": {
        "noForEach": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off"
      }
    }
  },
  "formatter": {
    "ignore": ["index.css"],
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": false
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
